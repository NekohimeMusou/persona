<div class="talent-section">
	<h2>
		{{localize 	"persona.statistic.talents"}}
	{{#if (isShadow actor)}}
	<a class="addShadowTalent">
		<i class="fa-solid fa-plus"> </i>
	</a>
	{{/if}}

	</h2>
	<table class="talents-table">
		{{#each actor.talents as |talent|}}
		<tr data-talent-id="{{talent.id}}">
			<td>
				<a class="talentName">
					{{talent.name}}
				</a>
			</td>
			<td>
				<a class="delTalent">
					<i class="fa-solid fa-trash-can"></i>
				</a>
			</td>
		</tr>
		{{/each}}
	</table>
</div>


