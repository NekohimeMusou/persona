<hr>
<div class="effects-list" data-path="{{namePrefix}}">
	<h4> Effects
		<a class="add-effect">
			<i class="fa-solid fa-plus"> </i>
		</a>
	</h4>
	{{#each (getProp owner namePrefix) as |effect i|}}
	<div class="flexrow" data-effect-index="{{i}}">
		<div class="power-effect" >
			{{> "systems/persona/parts/conditions-section.hbs" namePrefix=(strcat ../namePrefix i ".conditions.")  POWERSTUFF=../POWERSTUFF owner=../owner}}
			{{> "systems/persona/parts/consequences-section.hbs" namePrefix=(strcat ../namePrefix i ".consequences.")  POWERSTUFF=../POWERSTUFF owner=../owner}}
			<div class="short">
				<a class="del-effect">
					<i class="fa-solid fa-trash-can"></i>
				</a>
			</div>
		</div>
	</div>
	<hr>
	{{/each}}
</div>

