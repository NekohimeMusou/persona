<div class="event-card-event" data-event-index="{{eventIndex}}" data-card-id="{{cardData.card.id}}">
	<h4>
		Event {{eventNumber}}:
		{{event.name}}
	</h4>
	<div class="event-text">
		{{event.text}}
	</div>
	{{#each event.choices as |choice i|}}
	<div class="event-choice" data-choice-index="{{i}}">
		<h5>
			{{#if (meetsConditions situation choice.conditions)}}
			{{choice.name}}
			{{/if}}
		</h5>
		<div class="choice-text">
			{{choice.text}}
		</div>
		{{> "systems/persona/parts/social-card-roll.hbs" roll=choice.roll cardData=cardData situation=situation }}
	</div>
	{{/each}}
</div>
