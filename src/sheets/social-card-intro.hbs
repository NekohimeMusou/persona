<div class="social-card">
	<h2> {{link.actor.name}} (SL {{link.linkLevel}})
		{{#if (isHighestLinker pc link)}}
		<i title="Highest Link Level" class="fa-solid fa-star"></i>
		{{/if}}
	</h2>
	{{#if (isNonstandardPic card.img)}}
	<img src="{{card.img}}">
	{{else}}
	<img src="{{link.actor.img}}">
	{{/if}}
	<h2 class="card-title">
		{{card.name}}
	</h2>
	<div class="perk {{#if (not perkAvail)}} disabled {{/if}}">
		<b>Perk: </b>
		{{newlineConversion perk}}
	</div>
	{{#if isCameo}}
	<hr>
	<div class="cameo">
		<b>Cameo: </b>
		<ul>
			{{#each cameos as |cameo|}}
			<li>{{cameo.name}} </li>
			{{/each}}
		</ul>
		{{#if card.system.cameo}}
		{{newlineConversion card.system.cameo}}
		{{/if}}
	</div>
	{{/if}}
	{{#if card.system.opportunity}}
	<hr>
	<div class="opportunity">
		<b>Opportunity: </b>
		{{newlineConversion card.system.opportunity}}
	</div>
	{{/if}}
	{{#if card.system.bane}}
	<hr>
	<div class="bane">
		<b>Bane: </b>
		{{newlineConversion card.system.bane}}
	</div>
	{{/if}}
	<button class="social-roll" data-link-actor-id="{{link.actor.id}}" data-user-id="{{user.id}}" data-pc-id="{{pc.id}}">
		Make Roll
	</button>
</div>

